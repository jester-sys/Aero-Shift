<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/space_background"
    tools:context=".MainActivity">

    <!-- Space Background Layer (Top 65%) -->
    <View
        android:id="@+id/spaceBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_space"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.65" />

    <!-- Stars Container (Custom View for animated stars) -->
    <com.exmple.aeroshift.custom.StarsView
        android:id="@+id/starsView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/spaceBackground"
        app:layout_constraintBottom_toBottomOf="@id/spaceBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Moon Image (Top Right Corner) -->
    <ImageView
        android:id="@+id/moonImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/moon"
        android:contentDescription="@string/moon_destination"
        android:scaleType="fitCenter"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp" />

    <!-- Moon Label -->
    <TextView
        android:id="@+id/moonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moon"
        android:textColor="@color/cyan_400"
        android:textSize="10sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/moonImage"
        app:layout_constraintStart_toStartOf="@id/moonImage"
        app:layout_constraintEnd_toEndOf="@id/moonImage"
        android:layout_marginTop="8dp" />

    <!-- Atmospheric Curve (Custom View or ImageView) -->
    <ImageView
        android:id="@+id/atmosphericCurve"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/atmospheric_curve"
        android:scaleType="fitXY"
        android:contentDescription="@string/atmosphere"
        app:layout_constraintTop_toBottomOf="@id/spaceBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Earth Sky Background (Bottom 40%) -->
    <View
        android:id="@+id/earthSkyBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_earth_sky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.40" />

    <!-- Clouds Layer (FrameLayout with multiple cloud images) -->
    <FrameLayout
        android:id="@+id/cloudsLayer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/earthSkyBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:src="@drawable/cloud"
            android:alpha="0.6"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/cloud" />

        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:src="@drawable/cloud"
            android:alpha="0.5"
            android:layout_gravity="end"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/cloud" />

        <ImageView
            android:id="@+id/cloud3"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:src="@drawable/cloud"
            android:alpha="0.55"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/cloud" />
    </FrameLayout>

    <!-- Ground Layer -->
    <View
        android:id="@+id/groundLayer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/gradient_ground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Launch Pad -->
    <LinearLayout
        android:id="@+id/launchPadContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/controlButtonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/launchPadPlatform"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:src="@drawable/launch_pad_platform"
            android:contentDescription="@string/launch_pad" />

        <View
            android:id="@+id/launchPadSupport"
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:background="@color/gray_600" />

        <View
            android:id="@+id/launchPadBase"
            android:layout_width="64dp"
            android:layout_height="8dp"
            android:background="@drawable/launch_pad_base" />

        <TextView
            android:id="@+id/launchPadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch_pad"
            android:textColor="@color/gray_600"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Rocket ImageView (Animated) -->
    <ImageView
        android:id="@+id/rocketImage"
        android:layout_width="24dp"
        android:layout_height="48dp"
        android:src="@drawable/rocket"
        android:contentDescription="@string/rocket"
        android:scaleType="fitCenter"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/launchPadPlatform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rocket Flame Effect (Initially Hidden) -->
    <ImageView
        android:id="@+id/rocketFlame"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:src="@drawable/rocket_flame"
        android:contentDescription="@string/flame"
        android:visibility="gone"
        android:alpha="0.0"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/rocketImage"
        app:layout_constraintStart_toStartOf="@id/rocketImage"
        app:layout_constraintEnd_toEndOf="@id/rocketImage" />

    <!-- Trajectory Path (Custom Path View - Optional) -->
    <com.exmple.aeroshift.custom.TrajectoryPathView
        android:id="@+id/trajectoryPath"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:pathColor="@color/cyan_400_alpha"
        app:pathStrokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HUD Container (Right Side) -->
    <LinearLayout
        android:id="@+id/hudContainer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"
        android:elevation="20dp">

        <!-- Altitude Indicator Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/altitudeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/hud_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_altitude"
                        android:tint="@color/cyan_400"
                        android:contentDescription="@string/altitude" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alt"
                        android:textColor="@color/cyan_400"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/altitudeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/km"
                    android:textColor="@color/cyan_300"
                    android:textSize="8sp"
                    android:fontFamily="@font/inter_medium" />

                <ProgressBar
                    android:id="@+id/altitudeProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progressDrawable="@drawable/progress_gradient_cyan"
                    android:progress="0"
                    android:max="100" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Velocity Indicator Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/velocityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/hud_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_velocity"
                        android:tint="@color/purple_400"
                        android:contentDescription="@string/velocity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vel"
                        android:textColor="@color/purple_400"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/velocityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/km_per_s"
                    android:textColor="@color/purple_300"
                    android:textSize="8sp"
                    android:fontFamily="@font/inter_medium" />

                <ProgressBar
                    android:id="@+id/velocityProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progressDrawable="@drawable/progress_gradient_purple"
                    android:progress="0"
                    android:max="100" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gravity Indicator Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gravityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/hud_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_gravity"
                        android:tint="@color/orange_400"
                        android:contentDescription="@string/gravity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grav"
                        android:textColor="@color/orange_400"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gravityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.8"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m_per_s2"
                    android:textColor="@color/orange_300"
                    android:textSize="8sp"
                    android:fontFamily="@font/inter_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Status Bar (Top Center) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/hud_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:elevation="20dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready"
            android:textColor="@color/cyan_400"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </androidx.cardview.widget.CardView>

    <!-- Control Buttons Container (Bottom Center) -->
    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:elevation="20dp">

        <!-- Launch Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/launchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginEnd="12dp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/green_gradient_start"
            app:strokeWidth="1dp"
            app:strokeColor="@color/green_400"
            app:elevation="6dp" />

        <!-- Reset Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginEnd="12dp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/gray_600"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_500"
            app:elevation="6dp" />

        <!-- Auto-Land Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/autoLandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_land"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/blue_gradient_start"
            app:strokeWidth="1dp"
            app:strokeColor="@color/blue_400"
            app:elevation="6dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>